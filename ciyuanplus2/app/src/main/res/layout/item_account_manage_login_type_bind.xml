<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="#ffa2a2a4"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="未绑定账号，绑定后可用于登录"
        tools:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@color/white"
        android:clickable="false"
        android:focusable="false"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone"
        tools:visibility="visible">


        <TextView
            android:id="@+id/bindButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/home_list_follow_backgroud"
            android:clickable="true"
            android:contentDescription="TODO"
            android:focusable="true"
            android:gravity="center"
            android:text="绑定"
            android:textColor="#fffffdfd"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.ciyuanplus.mobile.widget.RoundImageView
            android:id="@+id/iv_account_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:focusable="false"
            android:src="@mipmap/chat_icon_opinion" />

        <TextView
            android:id="@+id/tv_unbind_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@id/bindButton"
            android:layout_toRightOf="@id/iv_account_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="15dp"
            android:visibility="gone"
            tools:text="微信"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/tv_nickname"
            style="@style/TextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_bind_type"
            android:layout_alignBottom="@id/iv_account_icon"
            android:layout_toLeftOf="@id/bindButton"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#ffa2a2a4"
            android:textSize="11dp"
            android:visibility="gone"
            tools:text="Kris"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_bind_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_nickname"
            android:layout_alignTop="@id/iv_account_icon"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/bindButton"
            android:layout_toRightOf="@id/iv_account_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333333"
            android:textSize="14dp"
            android:visibility="gone"
            tools:text="微信"
            tools:visibility="visible" />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignStart="@id/iv_account_icon"
            android:layout_alignLeft="@id/iv_account_icon"
            android:layout_alignParentBottom="true"
            android:background="#ffe9e9e9" />

    </RelativeLayout>
</LinearLayout>