<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <com.ciyuanplus.mobile.widget.SquareImageView
        android:id="@+id/m_list_item_start_news_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_image_007" />

    <ImageView
        android:id="@+id/m_list_item_start_news_del"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@null"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:scaleType="center"
        android:src="@mipmap/launch_icon_img_delete" />

</RelativeLayout>