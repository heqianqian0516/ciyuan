<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f000000"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/m_daily_pop_up_lp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/daily_pop_up_bg"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:paddingTop="25dp"
        android:paddingRight="10dp"
        android:paddingBottom="25dp"
        android:focusable="true">

        <com.ciyuanplus.mobile.widget.FangFontTextView
            android:id="@+id/m_daily_pop_up_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="11"
            android:textColor="#666666"
            android:textSize="36dp" />

        <com.ciyuanplus.mobile.widget.FangFontTextView
            android:id="@+id/m_daily_pop_up_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/m_daily_pop_up_day"
            android:text="星期一"
            android:textColor="#666666"
            android:textSize="12dp" />

        <com.ciyuanplus.mobile.widget.FangFontTextView
            android:id="@+id/m_daily_pop_up_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_daily_pop_up_week"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/m_daily_pop_up_day"
            android:text="2017/11"
            android:textColor="#666666"
            android:textSize="12dp" />

        <com.ciyuanplus.mobile.widget.FangFontTextView
            android:id="@+id/m_daily_pop_up_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_daily_pop_up_day"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="北京"
            android:textColor="#666666"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/m_daily_pop_up_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_list_share" />

        <ImageView
            android:id="@+id/m_daily_pop_up_image"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:layout_below="@id/m_daily_pop_up_weather"
            android:layout_marginTop="15dp" />

        <com.ciyuanplus.mobile.widget.RoundImageView
            android:id="@+id/m_daily_pop_up_head"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/m_daily_pop_up_image"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp" />

        <com.ciyuanplus.mobile.widget.FangFontTextView
            android:id="@+id/m_daily_pop_up_user_name"
            style="@style/TextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/m_daily_pop_up_image"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/m_daily_pop_up_head"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text=""
            android:textColor="#999999"
            android:textSize="12dp" />

        <com.ciyuanplus.mobile.widget.FangFontTextView
            android:id="@+id/m_daily_pop_up_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_daily_pop_up_user_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:lineSpacingExtra="12dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="15dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/m_daily_pop_up_close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:src="@mipmap/btn_closedx" />

</LinearLayout>