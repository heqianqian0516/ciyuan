<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp">

    <com.ciyuanplus.mobile.widget.RoundImageView
        android:id="@+id/m_list_item_all_rates_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/default_head_" />

    <ImageView
        android:id="@+id/m_list_item_all_rates_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/m_list_item_all_rates_head"
        android:layout_alignBottom="@id/m_list_item_all_rates_head"
        android:src="@mipmap/my_icon_boy_small" />

    <TextView
        android:id="@+id/m_list_item_all_rates_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@id/m_list_item_all_rates_head"
        android:text="asdgasdg"
        android:textColor="#333333"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/m_list_item_all_rates_neighbor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/m_list_item_all_rates_name"
        android:src="@mipmap/icon_neighbor_label" android:visibility="gone" />

    <com.ciyuanplus.mobile.widget.MarkView
        android:id="@+id/m_list_item_all_rates_mark_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        app:contentSize="18dp"
        app:disabled="true"
        app:leftPadding="5dp" />

    <LinearLayout
        android:id="@+id/m_list_item_all_rates_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_list_item_all_rates_name"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/m_list_item_all_rates_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="#999999"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/m_list_item_all_rates_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="11dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/m_list_item_all_rates_content_layout"
        android:layout_marginLeft="45dp"
        android:background="#f9f9f9" />
</RelativeLayout>