<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/m_list_item_mine_forum_food_location_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_location_black" />

            <com.ciyuanplus.mobile.widget.MarkView
                android:id="@+id/m_list_item_mine_forum_food_top_mark_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="13dp"
                app:contentSize="18dp"
                app:disabled="true"
                app:leftPadding="5dp" />

            <TextView
                android:id="@+id/m_list_item_mine_forum_food_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/m_list_item_mine_forum_food_top_mark_view"
                android:layout_toRightOf="@id/m_list_item_mine_forum_food_location_img"
                android:ellipsize="end"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#020202"
                android:textSize="15dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="-5dp">

            <TextView
                android:id="@+id/m_list_item_mine_forum_food_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:lineSpacingExtra="8dp"
                android:maxLines="2"
                android:text="asdgasdg"
                android:textColor="#333333"
                android:textSize="15dp" />
        </LinearLayout>

        <com.ciyuanplus.mobile.widget.ThreeGrideView
            android:id="@+id/m_list_item_mine_forum_food_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/m_list_item_mine_forum_food_opera_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawableLeft="@mipmap/img_star_grey"
                android:drawablePadding="9dp"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:paddingRight="25dp"
                android:paddingBottom="15dp"
                android:scaleType="center"
                android:src="@mipmap/btn_ect"
                android:text="点评"
                android:textColor="#333333"
                android:textSize="15dp"
                android:visibility="gone" />

            <com.ciyuanplus.mobile.widget.MarkView
                android:id="@+id/m_list_item_mine_forum_food_mark_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:contentSize="18dp"
                app:disabled="true"
                app:leftPadding="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--<TextView-->
                    <!--android:id="@+id/m_list_item_mine_forum_food_like_alert"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:layout_marginLeft="0dp"-->
                    <!--android:text="收藏"-->
                    <!--android:textColor="#999999"-->
                    <!--android:textSize="11dp" />-->
                    <!--<ImageView-->
                    <!--android:id="@+id/m_list_item_mine_forum_food_like_image"-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:scaleType="center"-->
                    <!--android:src="@mipmap/btn_want" />-->

                    <!--<TextView-->
                    <!--android:id="@+id/m_list_item_mine_forum_food_like_text"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--android:layout_marginLeft="0dp"-->
                    <!--android:text="0"-->
                    <!--android:textColor="#666666"-->
                    <!--android:textSize="11dp" />-->

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/m_list_item_mine_forum_food_like_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_unlike" />

                        <TextView
                            android:id="@+id/m_list_item_mine_forum_food_like_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/spacing_tiny"
                            android:text="0"
                            android:textColor="#666666"
                            android:textSize="11dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/m_list_item_mine_forum_food_comment_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@mipmap/icon_comment" />

                    <TextView
                        android:id="@+id/m_list_item_mine_forum_food_comment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/spacing_tiny"
                        android:text="0"
                        android:textColor="#666666"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/m_list_item_mine_forum_food_share_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/icon_list_share" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>