<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <include layout="@layout/item_list_header" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="6dp"
            android:layout_marginRight="@dimen/spacing_normal">

            <ImageView
                android:id="@+id/m_list_item_main_forum_food_location_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_location_black" />

            <com.ciyuanplus.mobile.widget.MarkView
                android:id="@+id/m_list_item_main_forum_food_mark_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="13dp"
                app:contentSize="18dp"
                app:disabled="true"
                app:leftPadding="5dp" />

            <TextView
                android:id="@+id/m_list_item_main_forum_food_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/m_list_item_main_forum_food_mark_view"
                android:layout_toRightOf="@id/m_list_item_main_forum_food_location_img"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="gasdgas"
                android:textColor="#020202"
                android:textSize="15dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="2dp"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginBottom="-5dp">

            <TextView
                android:id="@+id/m_list_item_main_forum_food_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="8dp"
                android:maxLines="2"
                android:textColor="#333333"
                android:textSize="15dp" />
        </LinearLayout>

        <com.ciyuanplus.mobile.widget.ThreeGrideView
            android:id="@+id/m_list_item_main_forum_food_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/spacing_normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal">

            <TextView
                android:id="@+id/m_list_item_main_forum_food_opera_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawableLeft="@mipmap/img_star_grey"
                android:drawablePadding="9dp"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:paddingRight="25dp"
                android:paddingBottom="15dp"
                android:scaleType="center"
                android:src="@mipmap/btn_ect"
                android:text="点评"
                android:textColor="#333333"
                android:textSize="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/m_list_item_main_forum_food_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="2017-01-01 12:00"
                android:textColor="#999999"
                android:textSize="11dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/list_item_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/icon_brower"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="@dimen/list_icon_bottom"
                        android:layout_height="@dimen/list_icon_bottom"
                        android:src="@drawable/icon_brower" />

                    <TextView
                        android:id="@+id/tv_browse_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:textColor="#666666"
                        android:textSize="11dp"
                        tools:text="1000" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="@dimen/list_item_width"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/m_list_item_main_forum_food_share_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="center"
                        android:src="@drawable/icon_list_share" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/list_item_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/m_list_item_main_forum_food_comment_like_image"
                        android:layout_width="@dimen/list_icon_bottom"
                        android:layout_height="@dimen/list_icon_bottom"
                        android:scaleType="fitStart"
                        android:src="@drawable/icon_unlike" />

                    <TextView
                        android:id="@+id/m_list_item_main_forum_food_like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:textColor="#666666"
                        android:textSize="11dp"
                        tools:text="11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/list_item_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/m_list_item_main_forum_food_comment_image"
                        android:layout_width="@dimen/list_icon_bottom"
                        android:layout_height="@dimen/list_icon_bottom"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitStart"
                        android:src="@mipmap/icon_comment" />

                    <TextView
                        android:id="@+id/m_list_item_main_forum_food_comment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:textColor="#666666"
                        android:textSize="11dp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>