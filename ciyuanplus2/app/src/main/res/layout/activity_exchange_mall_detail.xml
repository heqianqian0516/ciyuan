<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ciyuanplus.mobile.module.mine.exchange_mall.ExchangeMallDetailActivity">
    <com.ciyuanplus.mobile.widget.TitleBarView
        android:id="@+id/m_js_common_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
     <com.ciyuanplus.mobile.widget.MyWebView
                android:id="@+id/m_js_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/m_js_common_title"
                >

            </com.ciyuanplus.mobile.widget.MyWebView>

    <Button
        android:id="@+id/bt_redeem_now"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="#B422E4"
        android:text="立即兑换"
        android:textColor="@color/white" />
</RelativeLayout>
