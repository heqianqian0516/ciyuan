<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <com.ciyuanplus.mobile.widget.RoundImageView
            android:id="@+id/m_list_item_my_friends_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/tab_icon_my" />

        <ImageView
            android:id="@+id/m_list_item_my_friends_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/m_list_item_my_friends_icon"
            android:layout_alignBottom="@id/m_list_item_my_friends_icon"
            android:layout_marginRight="5dp"
            android:src="@mipmap/my_icon_boy_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:background="#e9e9e9" />

        <TextView
            android:id="@+id/m_list_item_my_friends_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewBold"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/m_list_item_my_friends_icon"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="xiaohuo"
            android:textColor="#333333"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/m_list_item_my_friends_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"
            android:src="@mipmap/icon_follow" />

        <LinearLayout
            android:id="@+id/m_list_item_my_friends_fan_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/m_list_item_my_friends_fan_state_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/chat_follow_xianghu" />

            <TextView
                android:id="@+id/m_list_item_my_friends_fan_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_main_friends_fan_huxiang_alert"
                android:textColor="#999999"
                android:textSize="9dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>