<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/m_list_item_main_forum_daily_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="20"
                android:textColor="#666666"
                android:textSize="36dp" />

            <TextView
                android:id="@+id/m_list_item_main_forum_daily_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/m_list_item_main_forum_daily_day"
                android:text="星期一"
                android:textColor="#666666"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/m_list_item_main_forum_daily_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m_list_item_main_forum_daily_week"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/m_list_item_main_forum_daily_day"
                android:text="2017/11"
                android:textColor="#666666"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/m_list_item_main_forum_daily_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/m_list_item_main_forum_daily_month"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="3小时前"
                android:textColor="#999999"
                android:textSize="11dp" />

            <com.ciyuanplus.mobile.widget.RectangeImageView
                android:id="@+id/m_list_item_main_forum_daily_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/m_list_item_main_forum_daily_month"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop" />

            <com.ciyuanplus.mobile.widget.RoundImageView
                android:id="@+id/m_list_item_main_forum_daily_head"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/m_list_item_main_forum_daily_image"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:src="@mipmap/default_head_" />

            <TextView
                android:id="@+id/m_list_item_main_forum_daily_user_name"
                style="@style/TextViewBold"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/m_list_item_main_forum_daily_image"
                android:layout_marginTop="10dp"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@id/m_list_item_main_forum_daily_head"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text=""
                android:textColor="#999999"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/m_list_item_main_forum_daily_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m_list_item_main_forum_daily_user_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:lineSpacingExtra="12dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp">

            <ImageView
                android:id="@+id/m_list_item_main_forum_daily_more_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="center"
                android:src="@mipmap/btn_ect" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/m_list_item_main_forum_daily_like_image"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/icon_unlike" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/m_list_item_main_forum_daily_like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:text="0"
                        android:textColor="#666666"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="center"
                        android:src="@mipmap/icon_comment" />

                    <TextView
                        android:id="@+id/m_list_item_main_forum_daily_comment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:text="0"
                        android:textColor="#666666"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/m_list_item_main_forum_daily_share_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="center"
                        android:src="@drawable/icon_list_share" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>