<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:orientation="vertical"
    >
    <com.ciyuanplus.mobile.widget.TitleBarView
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:id="@+id/scrollView_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_order_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:gravity="center"
                    android:text="您的订单已取消"
                    android:textSize="@dimen/font_large" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_status"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="@dimen/spacing_small"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:orientation="vertical"

                android:visibility="visible"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_small"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/icon_order_delivery" />

                    <TextView
                        android:id="@+id/tv_delivery_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_normal"
                        android:layout_toRightOf="@id/iv_delivery"
                        android:text="商家配送"
                        android:textColor="#ff1f191a"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="right"
                        android:visibility="gone"
                        android:orientation="vertical">

                       <!-- <TextView
                            android:id="@+id/tv_delivery_method"
                            style="@style/TextFormatOrderBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="待发货"
                            android:textColor="#ffb422e4"
                            android:textSize="15sp" />-->

                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="剩余 23:45:45"
                            android:textColor="#ff9b9b9b"
                            android:textSize="12sp" />-->

                    </LinearLayout>


                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_delivery_logistics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:gravity="center"
                    tools:text="这是什么？？？"
                    tools:visibility="gone" />


                <EditText
                    android:id="@+id/et_logistics_info"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:background="@drawable/umeng_socialize_edit_bg"
                    android:gravity="left|top"
                    android:hint="请填写配送机构名称及单号，若自行配送可不填写（例如达达送货，或者顺丰127383977）"
                    android:padding="@dimen/spacing_small"
                    android:textSize="14dp"
                    android:visibility="gone"
                    />


                <TextView
                    android:id="@+id/tv_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:gravity="center"
                    android:text="交易完成后，请提醒买家确认收货！"
                    android:visibility="gone" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:background="@color/white"
                android:padding="@dimen/spacing_normal">

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/mall_detail_address" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/iv_location">

                    <TextView
                        android:id="@+id/tv_buyer_phone_num"
                        style="@style/TextFormatOrderBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#ff1f191a"
                        android:textSize="15sp"
                        tools:text="1333333333333333" />

                    <TextView
                        android:id="@+id/tv_buyer"
                        style="@style/TextFormatOrderBlack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_normal"
                        android:layout_toLeftOf="@id/tv_buyer_phone_num"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:textColor="#ff1f191a"
                        android:textSize="15sp"
                        android:text="米小米米小米米小米米小米米小米米小米米小米米小米米小米米小米米"
                        tools:text="米小米米小米米小米米小米米小米米小米米小米米小米米小米米小米米小米米小米米小米米小米米小米米小米米小米" />


                    <TextView
                        android:id="@+id/tv_buyer_address"
                        style="@style/TextFormatOrderBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_buyer"
                        android:layout_marginLeft="@dimen/spacing_normal"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:textColor="#ff9b9b9b"
                        android:textSize="14sp"
                        android:text="北京市 朝阳区 晃光华路28号 世界财富中心东塔a座12F"
                        tools:text="北京市 朝阳区 晃光华路28号 世界财富中心东塔a座12F 1209" />

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:background="#ffffff"
                android:padding="@dimen/spacing_normal">

                <com.ciyuanplus.mobile.widget.SquareImageView
                    android:id="@+id/siv_order_image"
                    android:layout_width="77dp"
                    android:layout_height="79dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <RelativeLayout
                    android:id="@+id/tv_status"
                    android:layout_width="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_price"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/icon_shop_car_count_bg"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/minusButton"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:src="@drawable/icon_shop_car_minus" />

                    <TextView
                        android:id="@+id/prdCount"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toLeftOf="@id/addButton"
                        android:layout_toRightOf="@id/minusButton"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:text="1" />

                    <ImageView
                        android:id="@+id/addButton"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_shop_car_add" />


                </RelativeLayout>
                <ImageView
                    android:id="@+id/image_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/siv_order_image"
                    android:layout_toEndOf="@+id/siv_order_image"
                    android:layout_toRightOf="@+id/siv_order_image"
                    android:src="@mipmap/mall_detail_ciyuanbi"
                    android:layout_marginLeft="7dp"
                    />

                <TextView
                    android:id="@+id/tv_price"
                    style="@style/TextFormatOrderBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/siv_order_image"
                    android:layout_marginLeft="3dp"
                    android:layout_toEndOf="@id/image_to"
                    android:layout_toRightOf="@id/image_to"
                    android:ellipsize="end"
                    android:minLines="1"
                    android:singleLine="true"
                    android:text="68.00"
                    android:textColor="#ffff1a46"
                    android:textSize="20sp"
                    tools:text="9999999999999" />

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/TextFormatOrderBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_toEndOf="@+id/siv_order_image"
                    android:layout_toRightOf="@+id/siv_order_image"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:text="金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。"
                    tools:text="金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。" />


                <TextView
                    android:id="@+id/tv_specification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tv_price"
                    android:layout_below="@id/tv_title"
                    android:layout_alignStart="@id/tv_title"
                    android:layout_marginTop="9dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="规格：红色"
                    android:textColor="#ff9b9b9b"
                    android:textSize="14sp"
                    tools:text="规格：红色 x1" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品总计"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"
            android:layout_marginTop="22dp"
            />
        <ImageView
            android:id="@+id/image_ciyuanbi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/mall_detail_ciyuanbi"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_total"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16000"
            android:textColor="#FF1A46"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/image_ciyuanbi"
            android:layout_marginTop="18dp"
            />
        <Button
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="立即兑换"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:background="#B422E4"
            />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
