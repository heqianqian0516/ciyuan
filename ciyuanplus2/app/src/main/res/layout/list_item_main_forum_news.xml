<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:orientation="vertical">

        <include layout="@layout/item_list_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginBottom="-5dp">

            <TextView
                android:id="@+id/m_list_item_main_forum_news_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="8dp"
                android:maxLines="4"
                android:text=""
                android:textColor="#333333"
                android:textSize="15dp"
                tools:text="一只牛要卖五千块，五千块要买一只牛。一只牛要卖五千块，五千块要买一只牛。一只牛要卖五千块，五千块要买一只牛。一只牛要卖五千块，五千块要买一只牛。一只牛要卖五千块，五千块要买一只牛。" />
        </LinearLayout>

        <com.ciyuanplus.mobile.widget.ThreeGrideView
            android:id="@+id/m_list_item_main_forum_news_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/spacing_normal" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="@dimen/spacing_normal">

            <TextView
                android:id="@+id/m_list_item_main_forum_news_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="2017-01-01 12:00"
                android:textColor="#999999"
                android:textSize="11dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="@dimen/list_item_width"
                    android:layout_height="wrap_content"
                    android:gravity=""
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/list_icon_bottom"
                        android:layout_height="@dimen/list_icon_bottom"
                        android:src="@drawable/icon_brower" />

                    <TextView
                        android:id="@+id/tv_browse_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:textColor="#666666"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/list_item_width"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/m_list_item_main_forum_news_like_image"
                        android:layout_width="@dimen/list_icon_bottom"
                        android:layout_height="@dimen/list_icon_bottom"
                        android:src="@drawable/icon_unlike" />


                    <TextView
                        android:id="@+id/m_list_item_main_forum_news_like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:textColor="#666666"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/list_item_width"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/list_icon_bottom"
                        android:layout_height="@dimen/list_icon_bottom"
                        android:scaleType="fitStart"
                        android:src="@mipmap/icon_comment" />

                    <TextView
                        android:id="@+id/m_list_item_main_forum_news_comment_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:textColor="#666666"
                        android:textSize="11dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/m_list_item_main_forum_news_share_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="center"
                        android:src="@drawable/icon_list_share" />
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>