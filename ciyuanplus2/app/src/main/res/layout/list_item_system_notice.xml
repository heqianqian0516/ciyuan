<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <com.ciyuanplus.mobile.widget.RoundImageView
            android:id="@+id/m_list_item_user_notice_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/message_icon_set" />

        <TextView
            android:id="@+id/m_list_item_user_notice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/m_list_item_user_notice_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/m_list_item_user_notice_icon"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="系统消息"
            android:textColor="#ff333333"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/m_list_item_system_notice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/m_list_item_user_notice_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:drawablePadding="5dp"
            android:text="2016-10-20 15:34"
            android:textColor="#ff999999"
            android:textSize="11sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/m_list_item_user_notice_name"
            android:layout_alignParentBottom="true"
            android:background="#e9e9e9" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/m_list_item_user_notice_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/m_list_item_system_notice_time"
            android:layout_toRightOf="@id/m_list_item_user_notice_icon"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/m_list_item_system_notice_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="恭喜您成为本小区第1位注册用户，快去体验吧！"
                android:textColor="#ff999999"
                android:textSize="11sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/m_list_item_system_notice_new_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/icon_new"
            android:visibility="gone" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/m_list_item_system_notice_delete"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:background="#FFB422E4"
        android:scaleType="center"
        android:src="@mipmap/icon_list_detele" />
</LinearLayout>