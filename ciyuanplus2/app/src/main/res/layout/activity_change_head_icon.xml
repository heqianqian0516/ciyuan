<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/m_select_squre_image_top_lp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/m_select_squre_image_back_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:scaleType="center"
            android:src="@mipmap/nav_icon_back_white" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="头像"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/m_select_squre_head_change_btn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/select_change_head_btn_bg"
        android:text="更换头像"
        android:textColor="#000000"
        android:textSize="16dp" />

    <com.ciyuanplus.mobile.widget.MyZoomImageView
        android:id="@+id/m_select_squre_head_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/m_select_squre_head_change_btn"
        android:layout_below="@id/m_select_squre_image_top_lp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:scaleType="centerCrop" />

</RelativeLayout>