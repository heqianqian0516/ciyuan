<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/custom_dialog_bg">

        <TextView
            android:id="@+id/m_marking_close_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="点星评分"
            android:textColor="#333333"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/m_marking_close_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="center"
            android:src="@mipmap/my_icon_location_close" />

        <com.ciyuanplus.mobile.widget.MarkView
            android:id="@+id/m_marking_mark_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_marking_close_alert"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            app:contentSize="25dp"
            app:leftPadding="5dp" />

        <EditText
            android:id="@+id/m_marking_input_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/m_marking_mark_view"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="19dp"
            android:background="@drawable/report_input_view_bg"
            android:gravity="left|top"
            android:hint="快来写下您的评价吧~"
            android:padding="10dp"

            android:textColor="#999999"
            android:textSize="15dp" />

        <View
            android:id="@+id/m_marking_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/m_marking_input_view"
            android:layout_marginTop="15dp"
            android:background="#dddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/m_marking_line">

            <TextView
                android:id="@+id/m_marking_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#333333"
                android:textSize="15dp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dddddd" />

            <TextView
                android:id="@+id/m_marking_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="#333333"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>