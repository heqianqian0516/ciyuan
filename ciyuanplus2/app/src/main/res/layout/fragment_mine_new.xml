<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <mobile.yy.com.nestedtouch.StickyNestedLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@id/stickyHeadView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">
                <com.ciyuanplus.mobile.widget.TitleBarsView
                    android:id="@+id/title_bars"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"></com.ciyuanplus.mobile.widget.TitleBarsView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="79dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/mine_top_bg" />

                    <com.ciyuanplus.mobile.widget.RoundImageView
                        android:id="@+id/iv_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp"
                        android:src="@mipmap/default_head_" />

                    <ImageView
                        android:id="@+id/iv_head_sex"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignRight="@id/iv_head"
                        android:layout_alignBottom="@id/iv_head"
                        android:src="@mipmap/my_icon_boy_small" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/TextViewBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/iv_head"
                        android:layout_alignBottom="@id/iv_head"
                        android:layout_marginLeft="19dp"
                        android:layout_marginRight="19dp"
                        android:layout_toRightOf="@id/iv_head"
                        android:gravity="center_vertical"
                        android:textColor="#ffffffff"
                        android:textSize="15sp"
                        tools:text="动漫一郎" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="19dp"
                    android:paddingRight="14dp">

                    <TextView
                        android:id="@+id/tv_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/white"
                        android:hint="我是签名，我是就爱签名"
                        android:textColor="#ffb2b2b2"
                        android:textSize="13sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_like"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_like_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="0"
                                    android:textColor="#ff666666"
                                    android:textSize="18sp"
                                    tools:text="5000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="获赞"
                                    android:textColor="#ffb2b2b2"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_follow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_small"
                                android:layout_marginRight="@dimen/spacing_small"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_follow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:text="0"
                                    android:textColor="#ff666666"
                                    android:textSize="18sp"
                                    tools:text="5000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="关注"
                                    android:textColor="#ffb2b2b2"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_fan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_fans"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:gravity="bottom"
                                    android:text="0"
                                    android:textColor="#ff666666"
                                    android:textSize="18sp"
                                    tools:text="5000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="粉丝"
                                    android:textColor="#ffb2b2b2"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="16dp"
                        android:background="#ffdddddd"
                        tools:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal"
                    tools:visibility="visible">

                    <LinearLayout
                        android:id="@+id/ll_my_orders"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_my_orders" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text="我的订单"
                            android:textColor="#ff666666"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_address_manager"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_my_address" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text="地址管理"
                            android:textColor="#ff666666"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_my_contact" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text="联系客服"
                            android:textColor="#ff666666"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_about"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_about_us" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text="关于我们"
                            android:textColor="#ff666666"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:background="#ffebebeb" />
            </LinearLayout>

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/stl_tabs"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/line"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="14dp"
                android:background="@color/white"
                android:contentDescription="@string/stickyNavView"
                tl:tl_indicator_color="#B422E4"
                tl:tl_indicator_margin_left="2dp"
                tl:tl_indicator_margin_right="2dp"
                tl:tl_indicator_style="BLOCK"
                tl:tl_textSelectColor="@color/white"
                tl:tl_textUnselectColor="#A1A1A1"
                tl:tl_textsize="15dp"
                tools:background="@color/red" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffebebeb"
                android:contentDescription="@string/stickyContentView"
                tools:background="@color/red"
                tools:layout_height="200dp" />
        </mobile.yy.com.nestedtouch.StickyNestedLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</FrameLayout>