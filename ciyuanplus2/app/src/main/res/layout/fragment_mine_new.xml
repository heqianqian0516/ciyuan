<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical">
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <mobile.yy.com.nestedtouch.StickyNestedLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@id/stickyHeadView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <LinearLayout
                     android:orientation="vertical"
                     android:layout_width="match_parent"
                     android:background="@mipmap/mine_bg"
                     android:layout_height="169dp">
                    <include layout="@layout/mine_bar"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                   <!-- <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                             android:layout_marginTop="-1dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/mine_top_bg" />-->

                    <com.ciyuanplus.mobile.widget.RoundImageView
                        android:id="@+id/iv_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30dp"
                        android:src="@mipmap/default_head_" />

                    <ImageView
                        android:id="@+id/iv_head_sex"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignRight="@id/iv_head"
                        android:layout_alignBottom="@id/iv_head"
                        android:src="@mipmap/my_icon_boy_small" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/TextViewBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/iv_head"
                        android:layout_alignBottom="@id/iv_head"
                        android:layout_marginLeft="19dp"
                        android:layout_marginRight="19dp"
                        android:layout_toRightOf="@id/iv_head"
                        android:gravity="center_vertical"
                        android:textColor="#ffffffff"
                        android:textSize="15sp"
                        tools:text="动漫一郎" />
                </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginBottom="20dp"
                        android:text="我是签名，我是就爱签名"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="19dp"
                        android:textSize="13sp" />
                </LinearLayout>
                   
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:orientation="horizontal"
                           android:layout_marginTop="5dp"
                           android:layout_marginBottom="20dp"
                           android:layout_height="wrap_content">
                            <LinearLayout
                                android:id="@+id/ll_like"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_like_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#000000"
                                    android:textSize="18sp"
                                    tools:text="48" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="获赞"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />
                            </LinearLayout>
                           <View
                               android:layout_width="1dp"
                               android:layout_height="39dp"
                               android:background="#DDDDDD"
                               />
                            <LinearLayout
                                android:id="@+id/ll_follow"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_follow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#000000"
                                    android:textSize="18sp"
                                    tools:text="5000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="关注"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />
                            </LinearLayout>
                           <View
                               android:layout_width="1dp"
                               android:layout_height="39dp"
                               android:background="#DDDDDD"
                               />
                            <LinearLayout
                                android:id="@+id/ll_fan"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_fans"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#000000"
                                    android:textSize="18sp"
                                    tools:text="5000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="粉丝"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />
                            </LinearLayout>
                           <View
                               android:layout_width="1dp"
                               android:layout_height="39dp"
                               android:background="#DDDDDD"
                               />

                            <LinearLayout
                                android:id="@+id/ll_coupon"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_oupon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#000000"
                                    android:textSize="18sp"
                                    tools:text="8" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="优惠券"
                                    android:textColor="#000000"
                                    android:textSize="12sp" />
                            </LinearLayout>
                       </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="6dp"
                   android:background="#EBEBEB"
                   />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_sign_in"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tv_sign_in"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/icon_sign_in"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="每日签到"
                        android:textColor="#ff666666"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_daily"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tv_daily"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/icon_daily"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日常任务"
                        android:textColor="#ff666666"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_novice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tv_novice"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/icon_novice"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新手任务"
                        android:textColor="#ff666666"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_exchange"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tv_exchange"
                        android:layout_width="32dp"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_exchange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="次元币兑换"
                        android:textColor="#ff666666"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#ffdddddd"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        tools:visibility="visible" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    tools:visibility="visible">

                    <LinearLayout
                        android:id="@+id/ll_my_orders"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_my_orders" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text="我的订单"
                            android:textColor="#ff666666"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_address_manager"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_my_address" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text="地址管理"
                            android:textColor="#ff666666"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_my_contact" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text="联系客服"
                            android:textColor="#ff666666"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_about"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_about_us" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text="关于我们"
                            android:textColor="#ff666666"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

//////////////////////////////////////////////

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_small"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:background="#ffebebeb" />
            </LinearLayout>

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/stl_tabs"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/line"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="14dp"
                android:background="@color/white"
                android:contentDescription="@string/stickyNavView"
                tl:tl_indicator_color="#B422E4"
                tl:tl_indicator_margin_left="2dp"
                tl:tl_indicator_margin_right="2dp"
                tl:tl_indicator_style="BLOCK"
                tl:tl_textSelectColor="@color/white"
                tl:tl_textUnselectColor="#A1A1A1"
                tl:tl_textsize="15dp"
                tools:background="@color/red" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffebebeb"
                android:contentDescription="@string/stickyContentView"
                tools:background="@color/red"
                tools:layout_height="200dp" />
        </mobile.yy.com.nestedtouch.StickyNestedLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</FrameLayout>