<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.youth.banner.Banner
                        android:id="@+id/bannerHome"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        tl:layout_constraintLeft_toLeftOf="parent"
                        tl:layout_constraintTop_toTopOf="parent">
                        <include layout="@layout/home_bar"
                            android:layout_height="40dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/homeline"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_alignParentBottom="true"
                                android:background="@mipmap/home_line" />

                        </RelativeLayout>

                    </com.youth.banner.Banner>

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="189dp"
                        android:background="@color/white"
                        android:paddingLeft="23dp"
                        android:paddingRight="@dimen/spacing_normal"
                        android:paddingBottom="9dp"
                        android:text="热门推荐"
                        android:textColor="#ff000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tl:layout_constraintLeft_toLeftOf="parent"
                        tl:layout_constraintTop_toTopOf="parent" />

                    <GridView
                        android:id="@+id/grid_hot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:numColumns="5"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="8dp"
                        tl:layout_constraintLeft_toLeftOf="parent"
                        tl:layout_constraintTop_toBottomOf="@id/text"
                        tools:background="@color/darkorchid"
                        tools:layout_height="80dp" />
                    <RelativeLayout
                        android:id="@+id/home_relative"
                        android:layout_width="match_parent"
                        android:layout_height="145dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/white"
                        tl:layout_constraintTop_toBottomOf="@id/grid_hot">
                    <ImageView
                        android:id="@+id/home_activity_imageview"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="5dp"
                        android:background="#fff"
                        android:orientation="vertical"
                        android:scaleType="fitXY"
                        />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#EBEBEB"
                        tl:layout_constraintTop_toBottomOf="@id/home_relative"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>







</FrameLayout>
