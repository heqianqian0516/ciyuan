<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        app:ios="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:background="#ffffff"
            android:padding="@dimen/spacing_normal">

            <com.ciyuanplus.mobile.widget.SquareImageView
                android:id="@+id/siv_order_image"
                android:layout_width="77dp"
                android:layout_height="79dp"
                android:scaleType="centerInside"
                tools:src="@mipmap/ic_launcher" />


            <RelativeLayout
                android:id="@+id/tv_status"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_price"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_shop_car_count_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minusButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                   android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@drawable/icon_shop_car_minus" />

                <TextView
                    android:id="@+id/prdCount"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@id/addButton"
                    android:layout_toRightOf="@id/minusButton"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:text="1" />

                <ImageView
                    android:id="@+id/addButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_shop_car_add" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/siv_order_image"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_small"
                android:layout_toStartOf="@id/tv_status"
                android:layout_toLeftOf="@id/tv_status"
                android:layout_toEndOf="@+id/siv_order_image"
                android:layout_toRightOf="@+id/siv_order_image"
                android:ellipsize="end"
                android:minLines="1"
                android:singleLine="true"
                android:textColor="#ff0000"
                tools:text="￥99999999999999999999999999998888" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextFormatOrderBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_toEndOf="@+id/siv_order_image"
                android:layout_toRightOf="@+id/siv_order_image"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。金鳞岂是池中物，一遇风云便化龙。" />

            <TextView
                android:id="@+id/tv_specification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_price"
                android:layout_below="@id/tv_title"
                android:layout_alignStart="@id/tv_title"
                android:layout_alignLeft="@id/tv_title"
                android:layout_marginTop="9dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ff9b9b9b"
                android:textSize="13sp"
                tools:text="规格：红色 x1" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/app_lavender"
            android:text="删除"
            android:textColor="@android:color/white"/>

    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</FrameLayout>