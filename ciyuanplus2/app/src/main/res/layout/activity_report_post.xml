<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include
        android:id="@+id/m_report_post_common_title"
        layout="@layout/common_title_bar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/m_report_post_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_report_post_common_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:horizontalSpacing="10dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:verticalSpacing="20dp" />

    <EditText
        android:id="@+id/m_report_post_input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/m_report_post_grid_view"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/report_input_view_bg"
        android:gravity="top"
        android:hint="请输入举报原因(1-200字)"
        android:padding="10dp"
        android:textColor="#333333"
        android:textColorHint="#999999"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/m_report_post_input"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/m_report_post_confirm"
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:background="@drawable/login_login_btn_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="16dp" />
    </LinearLayout>
</RelativeLayout>