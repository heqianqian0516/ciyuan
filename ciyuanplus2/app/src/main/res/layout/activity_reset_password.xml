<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/register_view_bg">

        <TextView
            android:id="@+id/m_reset_password_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="@string/string_reset_password_alert"
            android:textColor="#333333"
            android:textSize="16dp" />

        <View
            android:layout_width="20dp"
            android:layout_height="2.5dp"
            android:layout_below="@id/m_reset_password_top_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="#333333" />

        <ImageView
            android:id="@+id/m_reset_password_close_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:scaleType="center"
            android:src="@mipmap/my_icon_location_close" />

        <LinearLayout
            android:id="@+id/m_reset_password_first_lp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_reset_password_top_text"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <com.ciyuanplus.mobile.widget.NoEmojiEditText
                android:id="@+id/m_reset_password_old_view"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:background="@drawable/shape_edit_bg"
                android:drawableLeft="@mipmap/login_icon_password"
                android:drawablePadding="10dp"
                android:hint="@string/string_reset_password_old_alert"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="12dp" />

            <com.ciyuanplus.mobile.widget.NoEmojiEditText
                android:id="@+id/m_reset_password_new_view"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_edit_bg"
                android:drawableLeft="@mipmap/login_icon_password"
                android:drawablePadding="10dp"
                android:hint="@string/string_reset_password_new_alert"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/m_reset_password_confirm_text"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/login_login_btn_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffff"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>