<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <com.ciyuanplus.mobile.widget.RoundImageView
        android:id="@+id/m_list_item_all_wants_head"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@mipmap/default_head_" />

    <ImageView
        android:id="@+id/m_list_item_all_wants_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/m_list_item_all_wants_head"
        android:layout_alignBottom="@id/m_list_item_all_wants_head"
        android:src="@mipmap/my_icon_boy" />

    <LinearLayout
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_list_item_all_wants_head"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/m_list_item_all_wants_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="姓名"
            android:textColor="#333333"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/m_list_item_all_wants_neighbor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/icon_neighbor_label" android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>