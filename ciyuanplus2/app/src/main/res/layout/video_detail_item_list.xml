<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/img_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:clickable="false"
        android:focusable="false"
        android:visibility="visible"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head_portrait"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="25dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="@id/video_player"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="350dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="宛如小姐姐"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_head_portrait"
        app:layout_constraintLeft_toRightOf="@id/iv_head_portrait"
        app:layout_constraintTop_toTopOf="@id/iv_head_portrait" />
    <TextView
        android:id="@+id/tv_author_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="+ 关注"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="5dp"
        android:background="@drawable/video_detail_follow_bg"
        app:layout_constraintBottom_toBottomOf="@id/tv_author_name"
        app:layout_constraintLeft_toRightOf="@id/tv_author_name"
        app:layout_constraintTop_toTopOf="@id/tv_author_name" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="40dp"
        android:text="前面的帅哥为何那么 忧伤…"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/edi_tv_comment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:id="@+id/edi_tv_comment"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="@id/video_player"
        app:layout_constraintLeft_toLeftOf="parent"
        android:hint="说点什么吧..."
        android:background="@drawable/video_detail_comment_bg"
        android:textColorHint="#fff"
        android:padding="5dp"
        />
    <ImageView
        android:id="@+id/image_comment"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_marginStart="19dp"
        android:src="@mipmap/video_detail_comment"
        app:layout_constraintBottom_toBottomOf="@id/edi_tv_comment"
        app:layout_constraintLeft_toRightOf="@id/edi_tv_comment"
        app:layout_constraintTop_toTopOf="@id/edi_tv_comment" />
    <TextView
        android:id="@+id/tv_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/image_comment"
        app:layout_constraintLeft_toRightOf="@id/image_comment"
        app:layout_constraintTop_toTopOf="@id/image_comment" />
    <ImageView
        android:id="@+id/image_follow"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_red_hearts"
        app:layout_constraintBottom_toBottomOf="@id/tv_comment_num"
        app:layout_constraintLeft_toRightOf="@id/tv_comment_num"
        app:layout_constraintTop_toTopOf="@id/tv_comment_num" />
    <TextView
        android:id="@+id/tv_follow_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/image_follow"
        app:layout_constraintLeft_toRightOf="@id/image_follow"
        app:layout_constraintTop_toTopOf="@id/image_follow" />
    <ImageView
        android:id="@+id/image_share"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:src="@mipmap/video_detail_share"
        app:layout_constraintBottom_toBottomOf="@id/tv_follow_num"
        app:layout_constraintLeft_toRightOf="@id/tv_follow_num"
        app:layout_constraintTop_toTopOf="@id/tv_follow_num" />
    <TextView
        android:id="@+id/tv_share_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/image_share"
        app:layout_constraintLeft_toRightOf="@id/image_share"
        app:layout_constraintTop_toTopOf="@id/image_share" />
    <ImageView
        android:id="@+id/img_play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_live_profile_paly"
        android:clickable="true"
        android:focusable="true"
        android:tint="#f2f2f2"
        android:alpha="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>