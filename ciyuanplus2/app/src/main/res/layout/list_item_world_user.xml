<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">


        <com.ciyuanplus.mobile.widget.RoundImageView
            android:id="@+id/riv_head_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/chat_icon_opinion" />

        <ImageView
            android:id="@+id/iv_sex_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/riv_head_image"
            android:layout_alignBottom="@id/riv_head_image"
            android:layout_marginRight="3dp"
            android:src="@mipmap/my_icon_boy"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextViewBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_toEndOf="@+id/riv_head_image"
            android:layout_toRightOf="@+id/riv_head_image"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:maxLength="12"
            android:singleLine="true"
            android:textColor="#ff020202"
            android:textSize="12sp"
            android:visibility="visible"
            tools:text="慢慢小姐姐慢慢小姐姐慢慢小姐姐" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_alignLeft="@id/tv_name"
            android:layout_alignBottom="@id/riv_head_image"
            android:gravity="bottom"
            android:text="01-15 12:15"
            android:textColor="#ff666666"
            android:textSize="10sp"
            android:visibility="gone"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/home_list_follow_backgroud"
            android:gravity="center"
            android:text="+关注"
            android:textColor="#fffffdfd"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/tv_name"
            android:layout_alignParentBottom="true"
            android:background="#E9E9E9" />


    </RelativeLayout>

</LinearLayout>
