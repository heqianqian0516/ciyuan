<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/m_daily_detail_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="20"
            android:textColor="#666666"
            android:textSize="36dp" />

        <TextView
            android:id="@+id/m_daily_detail_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/m_daily_detail_month"
            android:layout_alignLeft="@+id/m_daily_detail_month"
            android:layout_alignParentTop="true"
            android:text="星期一"
            android:textColor="#666666"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/m_daily_detail_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_daily_detail_week"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/m_daily_detail_day"
            android:text="2017/11"
            android:textColor="#666666"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/m_daily_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/m_daily_detail_month"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:text="3小时前"
            android:textColor="#999999"
            android:textSize="11dp" />

        <ImageView
            android:id="@+id/m_daily_detail_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_daily_detail_month"
            android:layout_marginTop="15dp" />

        <com.ciyuanplus.mobile.widget.RoundImageView
            android:id="@+id/m_daily_detail_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/m_daily_detail_image"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/m_daily_detail_user_name"
            android:layout_width="wrap_content"
            style="@style/TextViewBold"
            android:layout_height="30dp"
            android:layout_below="@id/m_daily_detail_image"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:layout_toLeftOf="@id/m_daily_detail_head"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text=""
            android:textColor="#666666"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/m_daily_detail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m_daily_detail_user_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:lineSpacingExtra="12dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="16dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="#e9e9e9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_news_detail_comment_alert"
            android:textColor="#333333"
            android:textSize="16dp" />

        <View
            android:layout_width="20dp"
            android:layout_height="2.5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:background="#333333" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/m_daily_detail_null_lp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/null_data_comment" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/string_news_detail_comment_null_alert"
            android:textColor="#333333"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>
