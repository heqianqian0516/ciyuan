<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/m_list_item_news_comment_lp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <com.ciyuanplus.mobile.widget.RoundImageView
                android:id="@+id/m_list_item_news_comment_head_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/default_head_" />

            <ImageView
                android:id="@+id/m_list_item_news_comment_head_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/m_list_item_news_comment_head_image"
                android:layout_alignBottom="@id/m_list_item_news_comment_head_image"
                android:layout_marginRight="5dp"
                android:src="@mipmap/my_icon_boy_small" />


            <TextView
                android:id="@+id/m_list_item_news_comment_name_text"
                style="@style/TextViewBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/m_list_item_news_comment_head_image"
                android:ellipsize="end"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:text="测试名字测试名字测试名字测试名字"
                android:textColor="#333333"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/m_list_item_news_comment_is_neighbor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/m_list_item_news_comment_name_text"
                android:src="@mipmap/icon_neighbor_label"  android:visibility="gone" />


            <com.ciyuanplus.mobile.widget.MarkView
                android:id="@+id/m_list_item_news_comment_mark_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:contentSize="18dp"
                app:disabled="true"
                app:leftPadding="5dp" />

            <RelativeLayout
                android:id="@+id/rl_accept_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:text="采纳"
                    android:textColor="#333333"
                    android:textSize="12dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_accept"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/tv_accept"
                    android:src="@mipmap/qiuzhu_detail_icon_nor2x"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/m_list_item_news_comment_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="8dp"
            android:text=""
            android:textColor="#666666"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/m_list_item_news_comment_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="2017-01-01 12:00"
                android:textColor="#666666"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/m_list_item_news_comment_like_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0"
                android:visibility="gone"
                android:textColor="#999999"
                android:textSize="11dp" />

            <ImageView
                android:id="@+id/m_list_item_news_comment_like_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="0dp"
                android:layout_toLeftOf="@id/m_list_item_news_comment_like_number"
                android:scaleType="center"
                android:src="@drawable/icon_unlike"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/m_list_item_news_comment_child_lp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12.5dp"
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:paddingBottom="10dp">
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:background="#F5F5F5" />-->
            <com.ciyuanplus.mobile.widget.ListViewForScrollView
                android:id="@+id/m_list_item_news_comment_child"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:divider="#00ffffff"
                android:dividerHeight="10dp"
                android:fastScrollAlwaysVisible="false"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/m_list_item_news_comment_more"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/m_list_item_news_comment_child"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:scaleType="center"
                android:text="查看更多评论"
                android:textColor="#2D83D9"
                android:textSize="14dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12.55dp"
            android:background="#e9e9e9" />
    </LinearLayout>
</LinearLayout>