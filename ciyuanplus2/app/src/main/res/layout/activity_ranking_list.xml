<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<ImageView
    android:id="@+id/image_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detail_ranklist"
    />
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/m_step_ranking_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ranking_list_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" />

            <ImageView
                android:id="@+id/iv_activity"
                android:layout_width="86dp"
                android:layout_height="51dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="36dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/rank_activity" />
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rank_max_first"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
   <!-- <include layout="@layout/rank_toolbar"
        android:id="@+id/in"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        />-->
    <ImageView
        android:id="@+id/back"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@mipmap/back"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:id="@+id/share"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/share"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:id="@+id/iv_activitydetial"
        android:layout_width="86dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/rank_activity" />


</RelativeLayout>
