<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <tech.milin.social.Widget.RoundImageView
        android:id="@+id/m_list_item_system_message_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/tab_icon_my" />

    <ImageView
        android:id="@+id/m_list_item_system_message_hot_tag"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignRight="@id/m_list_item_system_message_icon"
        android:background="@drawable/my_message_hot_tag_bg" />

    <RelativeLayout
        android:id="@+id/m_list_item_system_message_opera_lp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/m_list_item_system_message_icon">

        <TextView
            android:id="@+id/m_list_item_system_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="xiaohuo"
            android:textColor="#111111"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/m_list_item_system_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2016/12/12"
            android:textColor="#666666"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/m_list_item_system_message_opera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp"
            android:drawableLeft="@mipmap/icon_comment"
            android:drawablePadding="5dp"
            android:text="评论了你"
            android:textColor="#666666"
            android:textSize="12dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/m_list_item_system_message_system_lp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/m_list_item_system_message_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="系统消息"
                android:textColor="#111111"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/m_list_item_system_message_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2016/12/12"
                android:textColor="#666666"
                android:textSize="11dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/m_list_item_system_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="恭喜你成为一个sb"
            android:textColor="#666666"
            android:textSize="12dp" />
    </LinearLayout>
</RelativeLayout>