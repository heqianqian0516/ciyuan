        <RelativeLayout
            android:id="@+id/rl_input_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:visibility="visible"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:src="@drawable/icon_list_share" />

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_toLeftOf="@id/iv_share"
                android:src="@drawable/icon_like" />

            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_toLeftOf="@id/iv_like"
                android:layout_centerVertical="true"
                android:background="@drawable/news_detail_input_bg"
                android:gravity="center_vertical"
                android:imeOptions="actionSend"
                android:maxLines="3"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:hint="来了就评论一下吧~"
                android:textColor="#ff999999"
                android:textSize="11dp"
                />

            <TextView
                android:id="@+id/m_common_detail_comment_submit"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_alignBottom="@id/et_input"
                android:layout_alignParentRight="true"
                android:background="@drawable/news_detail_submit_bg_selector"
                android:gravity="center"
                android:text="发送"
                android:textColor="#feffff"
                android:textSize="13dp"
                android:visibility="gone"

                />


        </RelativeLayout>
